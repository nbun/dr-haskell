  build-depends:       process, temporary, hpc, QuickCheck >= 2.10.0.1, base >=4.8 && <=4.9.1, containers, directory, edit-distance >= 0.2.2.1, exceptions >=0.8, filepath, ghc-paths >=0.1 && <0.2, haskeline >=0.7 && <0.8, haskell-src-exts >=1.19 && <1.20, hint >=0.6, hlint >=1.9.38, json >= 0.9.1, lens, mtl >=2.2 && <2.3, transformers
  hs-source-dirs:      src
  default-language:    Haskell2010

executable drhaskell-lint
  main-is:             DrHaskellLint.hs
  ghc-options:         -O2 -j4 -main-is DrHaskellLint
  -- other-modules:
  -- other-extensions:
  build-depends:       process, temporary, hpc, QuickCheck >= 2.10.0.1, base >=4.8 && <=4.9.1, containers, directory, edit-distance >= 0.2.2.1, exceptions >=0.8, filepath, ghc-paths >=0.1 && <0.2, haskeline >=0.7 && <0.8, haskell-src-exts >=1.19 && <1.20, hint >=0.6, hlint >=1.9.38, json >= 0.9.1, lens, mtl >=2.2 && <2.3, transformers
  hs-source-dirs:      src
  default-language:    Haskell2010

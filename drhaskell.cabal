category:            Teaching
build-type:          Simple
extra-source-files:  README.md
data-dir:            res
data-files:          Testing/templates.hs, TargetModules/Tests.hs, TargetModules/MyPrelude.hs, TargetModules/StartupEnvironment.hs
cabal-version:       >=1.10

executable drhaskell
  main-is:             Repl/Main.hs
